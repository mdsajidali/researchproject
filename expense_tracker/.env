# ============================================================================
# Django Expense Tracker - Environment Configuration
# Works across Docker Compose, Kubernetes, Swarm, Nomad, Mesos, and OpenShift
# ============================================================================

# ----------------------------
# Django Core Configuration
# ----------------------------
DEBUG=True
SECRET_KEY=dev-secret-key-change-me
ALLOWED_HOSTS=*,localhost,127.0.0.1,0.0.0.0,192.168.74.128,app

# ----------------------------
# Database Configuration (PostgreSQL)
# ----------------------------
DB_NAME=expensedb
DB_USER=expense
DB_PASSWORD=expensepass
DB_HOST=db
DB_PORT=5432

# ----------------------------
# Django Superuser (Auto-created in entrypoint)
# ----------------------------
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=adminpass

# ----------------------------
# Static & Media Files
# ----------------------------
# (Handled internally by WhiteNoise; nothing needed here)
# STATIC_URL=/static/

# ----------------------------
# Monitoring / Metrics Integration
# ----------------------------
# For future Prometheus/Gunicorn metrics endpoint
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus

# ----------------------------
# Optional Cloud / Deployment Metadata
# ----------------------------
ENVIRONMENT=local-dev
APP_NAME=expense-tracker
REGION=onprem



